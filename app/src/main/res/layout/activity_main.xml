<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_location_updates"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:text="Location Updates" />

        <Button
            android:id="@+id/btn_foreground_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_location_updates"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:text="Foreground Location Feature" />

        <Button
            android:id="@+id/btn_background_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_foreground_location"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:text="Background Location Feature" />

        <Button
            android:id="@+id/btn_start_location_updates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_background_location"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:text="Start location updates" />

    </RelativeLayout>
</layout>